{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"esModuleInterop": true,
		"moduleResolution": "node",
		// Emit
		"outDir": "build",
		"noEmitOnError": true,
		// Type Checking
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
